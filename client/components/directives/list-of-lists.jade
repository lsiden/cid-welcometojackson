ul.list-group
  li.list-group-item(ng-repeat='list in lists track by $index | filter:canDisplay(list)')
    .row
      .col-sm-4
        .row
          a(ui-sref="list({ id: list._id })")
            strong {{ list.title || 'untitled '}}
        .row
          a(ui-sref="lists({ author: list.author._id })") {{list.author.name}}
          span.text-muted , {{ list.updatedPretty }}
        .row
          .likes {{ list.nVotes }} likes

        //- {{ list }}

      .col-sm-8.categories
        span.category(ng-repeat="cat in list.categories")
          button.btn.btn-sm.btn-info(class="cat_{{ toSlug(cat.name) }}", ui-sref="lists({ category: cat._id })") {{ cat.name }}

