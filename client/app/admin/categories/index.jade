div(ng-include='"components/navbar/navbar.html"')
.container

  div.new
    button.btn.btn-primary.fa.fa-plus(ng-click="new()") &nbsp;New Category

  ul.list-group
    li.list-group-item(ng-repeat='category in categories track by $index')
      .row
        .col-sm-2
          a(ui-sref='admin-category({ id: category._id })') {{ category.name }}
        .col-sm-9
          | {{ category.about }}
        .col-sm-1
          a.trash(ng-click='delete(category)')
            span.glyphicon.glyphicon-trash.pull-right
